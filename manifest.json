{
  "manifest_version": 2,

  "name": "Quran Player",
  "description": "Play the Quran directly in the browser",
  "version": "1.11",

  "permissions": [
    "http://download.quranicaudio.com/"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "player.html"
  }
}